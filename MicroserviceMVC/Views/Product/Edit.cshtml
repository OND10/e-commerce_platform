
@using eCommerceWebMVC.Models.DTOs.ProductDTOs.Response
@model ProductResponseDto;


<form asp-action="Edit" method="Post" enctype="multipart/form-data">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Edit Product</h1>
        </div>
        <div class="row">
            <input type="hidden" asp-for="Id" />
            <div class="col-2">
                <label class="control-label pt-3" style="font-size:20px;" asp-for="Name"></label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-3" style="font-size:20px;" asp-for="Price"></label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Price" class="form-control" type="number" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-3" style="font-size:20px;" asp-for="NumberofProduct"></label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="NumberofProduct" class="form-control" />
                <span asp-validation-for="NumberofProduct" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-3" style="font-size:20px;" asp-for="Description"></label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-3" style="font-size:20px;" asp-for="Category"></label>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Category" class="form-select" asp-items="@ViewBag.catelist">
                    <option disabled selected>Select Role</option>
                </select>
            </div>
            <div class="form-group dropify">
                <label asp-for="FrontIamge"></label>
                <div class="col-sm-10">
                    <input onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])" type="file" class="dropify" asp-for="FrontIamge">
                </div>
                <span asp-validation-for="FrontIamge" class="text-danger"></span>
            </div>
            <br />
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="submit">Update</button>
            </div>
        </div>
    </div>
</form>


<script src="~/dropify.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("Selected").html(fileName);

        });
    </script>
    <script>
        //document.addEventListener('DOMContentLoaded', function () {
        //    $('.dropify').dropify();
        //});
        $('.dropify').dropify();
    </script>
}