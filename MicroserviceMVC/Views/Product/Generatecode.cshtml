@using eCommerceWebMVC.Models.DTOs.ProductDTOs.Response
@model ProductResponseDto


@if (TempData.ContainsKey("msg"))
{

    <div class="alert alert-info">@TempData["msg"]</div>

}



<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>QR</title>
</head>



<body>
    <div class="text-center p-3">
        <a asp-action="Index" class="btn btn-primary text-center">Back to List</a>
    </div>

    <br />
    <hr />

    @using (Html.BeginForm("Generatecode", "Product", FormMethod.Post))
    {

        @Html.TextBoxFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Price)
        <br />
        
        <div class="text-center">
            <button class="btn btn-success" type="submit">Generate</button>
        </div>

    }

    <br />
    <hr />
    @if (ViewBag.QRCodeImage != null)
    {
        <br />
        <h3 cla>You can scan below your code for details</h3>

        <div class="text-center">
            <img src="@ViewBag.QRCodeImage" class="rounded" alt="...">
        </div>
    }

</body>
</html>