@model IList<string>

@foreach (var role in Model)
{
    if (role == "Admin")
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Management Content
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Coupon" asp-action="Index">Coupon</a></li>
                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Product</a></li>
                <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">Order</a></li>
                
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Order">
                &nbsp;
                <i class="bi bi-bag-check-fill"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Cart">
                &nbsp;
                <i class="bi bi-cart"></i>&nbsp;
            </a>
        </li>
    }
}
